@model Shopping_Site.Models.Feature

<br />
<div class=" d-flex justify-content-center">
    <h3>Update Feature @Model.Name</h3>
</div>
<br />

<div class=" d-flex justify-content-center">
    @using (Html.BeginForm(actionName: "Edit", controllerName: "Feature"))
    {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.HiddenFor(b => b.FeatureID)


        @Html.LabelFor(b => b.Name)
        <br />
        @Html.TextBoxFor(b => b.Name, null, new { placeholder = "Type in the feature's name", @class = "form-control" }) @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
        <br />

        <button class="btn btn-primary" type="submit">Update</button>
    }
</div>




