@model Shopping_Site.Models.Feature
@{
    ViewBag.Title = "Details";
}

<br />
<h2>Details</h2>
<br />

<br />
<table  class="w-25 table">
    <tbody>
        <tr>
            <td>@Html.LabelFor(p => p.Name, "Feature name:", new { style = "margin-right:10px" })</td>
            <td>@Html.DisplayFor(p => p.Name)</td>
        </tr>

    </tbody>
</table>

<br />
@using (Html.BeginForm(actionName: "Edit", controllerName: "Feature", method: FormMethod.Get, routeValues: new { id = Model.FeatureID }))
{
    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Update</button>
}

<br />
@using (Html.BeginForm(actionName: "Delete", controllerName: "Feature", method: FormMethod.Post, routeValues: new { id = Model.FeatureID }))
{
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Delete</button>
}

<br />
@Html.ActionLink("Add feature", "New", "Feature")