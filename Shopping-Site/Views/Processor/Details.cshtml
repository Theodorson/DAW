@model Shopping_Site.Models.Processor
@{
    ViewBag.Title = "Details";
}

<br />
<h2>Details</h2>
<br />


<br />
<table  class="w-50 table">
    <tbody>
        <tr>
            <td>@Html.LabelFor(p => p.Model, "Model:", new { style = "margin-right:10px" })</td>
            <td>@Html.DisplayFor(p => p.Model)</td>
        </tr>
        
        <tr>
            <td>@Html.LabelFor(p => p.Cores_number, "Cores number:", new { style = "margin-right:10px" })</td>
            <td>@Html.DisplayFor(p => p.Cores_number)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.Frequency, "Frequency:", new { style = "margin-right:10px" })</td>
            <td>@Html.DisplayFor(p => p.Frequency) GHz</td>
        </tr>


    </tbody>
</table>

<br />
@using (Html.BeginForm(actionName: "Edit", controllerName: "Processor", method: FormMethod.Get, routeValues: new { id = Model.ProcessorID }))
{
    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Update</button>
}

<br />
@using (Html.BeginForm(actionName: "Delete", controllerName: "Processor", method: FormMethod.Post, routeValues: new { id = Model.ProcessorID }))
{
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Delete</button>
}

<br />
@Html.ActionLink("Add processor", "New", "Processor")